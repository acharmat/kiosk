{
  "name": "kiosk-terminal-app",
  "version": "1.0.0",
  "description": "Kiosk Terminal Management Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "electron:build": "npm run build",
    "electron:pack": "electron-builder --publish=never",
    "electron:dist": "electron-builder --publish=always"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^2.0.1",
    "@mdi/font": "^7.4.47",
    "axios": "^1.5.0",
    "better-sqlite3": "^8.7.0",
    "date-fns": "^2.30.0",
    "electron-store": "^8.1.0",
    "lodash": "^4.17.21",
    "pinia": "^2.1.6",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vuetify": "^3.8.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.5",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-electron": "^0.14.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.company.kiosk-terminal",
    "productName": "Kiosk Terminal",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
