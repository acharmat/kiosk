{
  "name": "Kiosk Terminal Application",
  "short_name": "Kiosk Terminal",
  "description": "Self-service kiosk terminal for retail shopping and transactions",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "fullscreen",
  "orientation": "landscape-primary",
  "theme_color": "#1976D2",
  "background_color": "#FAFAFA",
  "lang": "en",
  "dir": "ltr",

  "icons": [
    {
      "src": "/images/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "categories": [
    "business",
    "productivity",
    "shopping"
  ],

  "prefer_related_applications": false,

  "shortcuts": [
    {
      "name": "Start Shopping",
      "short_name": "Shop",
      "description": "Start a new shopping session",
      "url": "/channels",
      "icons": [
        {
          "src": "/images/shortcut-shop.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Maintenance",
      "short_name": "Maintenance",
      "description": "Access maintenance mode",
      "url": "/maintenance",
      "icons": [
        {
          "src": "/images/shortcut-maintenance.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "screenshots": [
    {
      "src": "/images/screenshot-desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Kiosk main interface showing product categories"
    },
    {
      "src": "/images/screenshot-desktop-2.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Shopping cart and checkout process"
    },
    {
      "src": "/images/screenshot-tablet-1.png",
      "sizes": "768x1024",
      "type": "image/png",
      "platform": "narrow",
      "label": "Touch-optimized product selection"
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "kiosk",
      "url": "/handle?protocol=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "handle_links": "preferred",

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/handle-csv",
      "accept": {
        "text/csv": [".csv"]
      },
      "icons": [
        {
          "src": "/images/csv-icon.png",
          "sizes": "256x256",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ]
}